
@model PortFo.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}


<!-- Page Title
================================================== -->
<div id="page-title">
    <div class="row">
        <div class="ten columns centered text-center">
            <h1>Get In Touch<span>.</span></h1>

            <p></p>
        </div>
    </div>
