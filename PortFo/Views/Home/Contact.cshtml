<!-- Page Title End-->
<!-- Content
================================================== -->
<div class="content-outer">
    <div id="page-content" class="row page">
        <div id="primary" class="eight columns">
            <section>
                
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="row">
                        <p style="color: red; font-style: italic;">
                            @Html.Raw(ViewBag.ErrorMessage)
                        </p>
                    </div>
                }



                <h1>Hello. Let's talk.</h1>

                <p class="lead">
                    Feel free to reach out here, by phone or any of the linked social
                    media accounts on the site. I will get back to you as soon as
                    possible.
                </p>

                <p>Can't wait to hear from you!</p>

                <div id="contact-form">
                    <!-- form -->
                    <form  asp-action="Contact" class="php-email-form" name="contactForm" id="contactForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <fieldset>
                            <div class="half">
                                <label for="contactName"></label>
                                <input asp-for="Name" class="form-control" placeholder="Name" id="name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="half pull-right">
                                <label for="contactEmail"></label>
                                <input asp-for="Email" class="form-control" id="email" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div>
                                <label for="contactSubject"></label>
                                <input asp-for="Subject" class="form-control" id="subject" placeholder="Subject" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>

                            <div>
                                <label for="contactMessage"></label>
                                <textarea asp-for="Subject" class="form-control" rows="15" name="contactMessage" id="contactMessage" placeholder="message"></textarea>       
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>

                            <div>
                                
                                <button class="submit" type="submit"> Send Message</button>
                                @*<span id="image-loader">
                                    <img src="~/images/loader.gif" alt="" />
                                </span>*@
                            </div>
                        </fieldset>
                    </form>
                    <!-- Form End -->
